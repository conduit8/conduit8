# ========================================
# Conduit8 Web Frontend Environment Variables
# ========================================
# Copy this file to .env.local for local development
# All VITE_ prefixed vars are exposed to the browser
# ========================================

# ========================================
# App Configuration
# ========================================

# Base URL for the frontend app
VITE_BASE_URL=http://localhost:5173

# ========================================
# Security
# ========================================

# Cloudflare Turnstile (Captcha)
# Test key for localhost: 1x00000000000000000000AA (always passes)
# Test key for localhost: 2x00000000000000000000AB (always blocks)
# Production key: Get from https://dash.cloudflare.com/
VITE_TURNSTILE_SITE_KEY=1x00000000000000000000AA

# ========================================
# Monitoring & Analytics
# ========================================

# Sentry Error Tracking
# Get from: https://sentry.io/settings/projects/conduit8/keys/
VITE_SENTRY_DSN=https://your-sentry-dsn@o4508393623257088.ingest.us.sentry.io/4510068854489088

# Sentry Auth Token - Only needed for production builds (sourcemap uploads)
# Create at: https://sentry.io/settings/account/api/auth-tokens/
# Required scopes: project:releases, org:read
SENTRY_AUTH_TOKEN=your-sentry-auth-token-here

# PostHog Product Analytics
# Get from: https://posthog.com/project/settings
VITE_PUBLIC_POSTHOG_KEY=phc_your-posthog-key

{
  "name": "conduit8",
  "type": "module",
  "description": "Conduit8 - Curated registry of Claude Code skills",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@10.18.3",
  "scripts": {
    "typecheck": "pnpm run -r --stream typecheck",
    "cf-typegen": "pnpm --filter @conduit8/worker cf-typegen",
    "dev": "pnpm run -r --parallel --stream dev",
    "build:pkg": "pnpm --filter @conduit8/core run build",
    "build": "pnpm --filter @conduit8/core build && pnpm --filter @conduit8/worker build",
    "build:prod": "pnpm --filter @conduit8/core build && pnpm --filter @conduit8/worker build:prod",
    "test": "pnpm run -r --stream --parallel test",
    "test:unit": "pnpm --filter @conduit8/worker test:unit",
    "test:integration": "pnpm --filter @conduit8/worker test:integration",
    "test:web": "pnpm --filter @conduit8/web test",
    "lint": "pnpm run -r --stream --parallel lint",
    "lint:fix": "pnpm run -r --stream --parallel lint:fix",
    "import:skills": "cd scripts && pnpm exec tsx import-local-skills.ts",
    "deploy": "pnpm --filter @conduit8/worker run deploy",
    "deploy:prod": "echo '⚠️  WARNING: Deploying to PRODUCTION! Use CI/CD instead.' && pnpm --filter @conduit8/worker run deploy:prod"
  },
  "lint-staged": {
    "**": "npx -y eslint --quiet --fix"
  }
}
